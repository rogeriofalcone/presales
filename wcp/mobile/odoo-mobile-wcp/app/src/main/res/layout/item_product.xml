    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loc_row"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/button_cancel"
        android:layout_alignEnd="@+id/button_cancel"
        android:layout_marginTop="3dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loc_rack"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/loc_case"
        android:layout_alignStart="@+id/loc_case"
        android:layout_alignTop="@+id/textView7"
        android:layout_above="@+id/button_product_cancel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loc_case"
        android:layout_toRightOf="@+id/textView9"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/incomming_qty"
        android:layout_alignEnd="@+id/incomming_qty"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/skids_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_product_cancel"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Row Location:"
        android:id="@+id/textView11"
        android:layout_below="@+id/loc_rack"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Case Location:"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/loc_row"
        android:layout_toStartOf="@+id/loc_row"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

