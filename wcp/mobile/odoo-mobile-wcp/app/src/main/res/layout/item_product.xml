<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/item_product">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/do_name"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="6dp" />

    <TextView
        android:layout_width="78dp"
        android:layout_height="39dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/textView"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/do_quantity"
        android:textIsSelectable="false"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@id/do_name"
        android:layout_toEndOf="@+id/textView"
        android:visibility="visible"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity :"
        android:id="@+id/textView2"
        android:layout_below="@+id/do_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/do_lst_price"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/do_name"
        android:layout_alignEnd="@+id/do_name"
        android:layout_toEndOf="@+id/do_name"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/do_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/default_code"
        android:layout_alignRight="@+id/incomming_qty"
        android:layout_alignEnd="@+id/incomming_qty"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/outgoing_qty"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/gross_weight"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/incomming_qty"
        android:layout_gravity="right"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price :"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/do_quantity"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Incomming Quantity :"
        android:id="@+id/textView4"
        android:layout_below="@+id/default_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Outgoing Quantity :"
        android:id="@+id/textView5"
        android:layout_below="@+id/incomming_qty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gross Weight :"
        android:id="@+id/textView6"
        android:layout_below="@+id/outgoing_qty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rack Location :"
        android:id="@+id/textView7"
        android:layout_below="@+id/gross_weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Default Code:"
        android:id="@+id/textView8"
        android:layout_below="@+id/do_lst_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/button_product_cancel"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

