<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/delivery_product_id"
        android:maxLength="20"
        android:maxLines="1"
        android:typeface="monospace" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Actual IN"
    android:id="@+id/delivery_in"
    android:layout_alignBottom="@+id/delivery_product_id"
    android:layout_alignRight="@+id/delivery_out"
    android:layout_alignEnd="@+id/delivery_out"
    android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Customer Detail"
    android:gravity="center_vertical"
    android:id="@+id/delivery_partner_name"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
        android:typeface="monospace" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Actula Out"
    android:gravity="center_vertical"
    android:id="@+id/delivery_out"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/delivery_id"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>